<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">


    <TextView
        android:id="@+id/titleSignUp"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2sp"
        android:text="@string/references" />

    <TextView
        android:id="@+id/image-net"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/images"
        android:background="@color/background"
        android:text="@string/image_net_com"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="115dp"
        android:background="@color/background"
        android:text="@string/images"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:id="@+id/shutterstock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/image-net"
        android:background="@color/background"
        android:text="@string/shutterstock_com"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/backyards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/information"
        android:background="@color/background"
        android:text="@string/birds_in_backyards"
        android:textColor="@color/text" />

    <TextView
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titleSignUp"
        android:layout_marginTop="-2sp"
        android:background="@color/background"
        android:text="@string/information"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:onClick="backOnClick"
        android:text="@string/go_back"
        android:background="@color/background"
        style="?android:attr/borderlessButtonStyle"/>


</RelativeLayout>