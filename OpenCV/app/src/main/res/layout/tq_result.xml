<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <TextView
        android:id="@+id/tv_result_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        android:paddingBottom="3sp"
        android:layout_marginBottom="2sp"
        android:text="@string/are_you_thinking_of"
        android:textColor="@color/text"
        android:textSize="26sp"
        android:textAlignment="center"
        style="@style/Title"/>

    <TextView
        android:id="@+id/tv_result_bird_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginBottom="2sp"
        android:textColor="@color/text"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingBottom="2sp"
        android:cropToPadding="false"
        android:adjustViewBounds="true"
        android:contentDescription="@string/image_of_bird"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/appBackground"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp">

        <Button
            android:id="@+id/btn_result_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/yes"
            android:textColor="@color/text"
            android:background="@drawable/positive_rounded_button"/>

        <Button
            android:id="@+id/btn_result_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/no"
            android:textColor="@color/text"
            android:background="@drawable/negative_rounded_button"/>
    </RelativeLayout>
</LinearLayout>