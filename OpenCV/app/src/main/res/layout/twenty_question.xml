<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <TextView
        android:id="@+id/tv_home_question_no"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/text"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_home_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="3dp"
        android:textSize="26sp"
        android:textAlignment="center"
        android:background="@color/background"
        android:textColor="@color/text"/>

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"/>

    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ScrollView01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_0"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_1"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_2"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_3"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_4"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_5"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_6"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_7"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_8"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_9"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_10"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_11"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2sp"
                android:weightSum="1">

                <Button
                    android:id="@+id/btn_option_12"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:layout_marginEnd="2sp"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>

                <Button
                    android:id="@+id/btn_option_13"
                    android:layout_width="0dp"
                    android:layout_height="65dp"
                    android:layout_weight="0.5"
                    android:background="@color/background"
                    android:visibility="invisible"
                    style="?android:attr/borderlessButtonStyle"/>
            </LinearLayout>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/background"
                android:text="@string/go_home"
                style="?android:attr/borderlessButtonStyle"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>