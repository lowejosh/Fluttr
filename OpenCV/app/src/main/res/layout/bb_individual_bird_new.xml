<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/appBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/backButton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:contentDescription="@string/back_button"
            android:background="@color/background"
            app:srcCompat="?android:attr/actionModeCloseDrawable"
            android:onClick="goBack"/>

        <ImageView
            android:id="@+id/bird_image"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:adjustViewBounds="true"
            android:contentDescription="@string/image_of_bird"
            android:cropToPadding="false"
            android:paddingBottom="2sp"
            app:srcCompat="@drawable/ic_launcher_background" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/appBackground">

            <TextView
                android:id="@+id/bird_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="Bird Name:"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textAlignment="center"/>

            <TextView
                android:id="@+id/identification_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/bird_name"
                android:layout_marginStart="10sp"
                android:text="Date Found:"
                android:textSize="16sp"
                android:textColor="@color/title_color"/>

            <TextView
                android:id="@+id/Description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/identification_date"
                android:layout_marginStart="10sp"
                android:text="Description:"
                android:textSize="14sp"/>

            <LinearLayout
                android:layout_width="84sp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/bird_name"
                android:layout_marginEnd="10sp"
                android:orientation="vertical"
                android:background="@color/background"
                android:padding="10sp">

                <ImageView
                    android:id="@+id/bird_call"
                    android:layout_width="64sp"
                    android:layout_height="64sp"
                    android:layout_marginEnd="10sp"
                    android:adjustViewBounds="true"
                    android:background="@color/background"
                    android:contentDescription="@string/image_of_bird"
                    android:cropToPadding="false"
                    android:paddingBottom="2sp"
                    app:srcCompat="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/tv_cry"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content"
                    android:text="Bird Cry"
                    android:textAlignment="center"/>

                <TextView
                    android:id="@+id/tv_min_size"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content"
                    android:text="Min size:"
                    android:textAlignment="center"
                    android:textColor="@color/title_color"/>

                <TextView
                    android:id="@+id/min_size"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textAlignment="center"
                    android:textColor="@color/title_color"/>

                <TextView
                    android:id="@+id/tv_max_size"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content"
                    android:text="Max size:"
                    android:textAlignment="center"
                    android:textColor="@color/title_color"/>

                <TextView
                    android:id="@+id/max_size"
                    android:layout_width="64sp"
                    android:layout_height="wrap_content"
                    android:text="..."
                    android:textAlignment="center"
                    android:textColor="@color/title_color"/>

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
</ScrollView>