<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.charles.opencv">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:screenOrientation="landscape">
        </activity>

        <activity
            android:name=".FeatureActivity.BirdFinderActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".BirdBank.IndividualBirdActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".HomeScreen"
            android:label="@string/title_activity_home">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FeatureActivity.SearchActivity"
            android:screenOrientation="portrait">
        </activity>
        <activity android:name=".FeatureActivity.BirdBankActivity" />
        <activity android:name=".FeatureActivity.SettingActivity" />

    </application>

</manifest>