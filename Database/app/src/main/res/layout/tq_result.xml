<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_result_title"
        android:text="@string/are_you_thinking_of"
        android:textColor="#000"
        android:textSize="26sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/tv_result_duck_name"
        android:text="Bird Name"
        android:textColor="#000"
        android:textSize="20sp"
        android:textAlignment="center"/>

    <ImageView
        android:id="@+id/iv_result_image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="Ibis"
        android:src="@drawable/ibis" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="50dp"
        android:paddingRight="50dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/yes"
            android:background="@color/green"
            android:id="@+id/btn_result_yes"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/no"
            android:background="@color/red"
            android:id="@+id/btn_result_no"/>
    </RelativeLayout>
</LinearLayout>